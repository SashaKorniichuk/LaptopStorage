@model IEnumerable<StoreUI.Models.OrderDetailsViewModel>

@{
    ViewBag.Title = "OrderDetails";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
<div class="container mt-3">
    
<h2>OrderDetails</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LaptopImage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LaptopName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LaptopPrice)
        </th>
        <th>

        </th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
       @item.Id
    </td>
    <td>
       <img src="@item.LaptopImage" width="150" />     
    </td>
    <td>
       @item.LaptopName
    </td>
    <td>
       @item.LaptopPrice $
    </td>
    <td>
        @Html.ActionLink("Details", "Details", new { id = item.LaptopId }, new { @class = "btn btn-warning" }) 
    </td>
</tr>
}
<tr class="text-danger">
    <td>Total:</td>
    <td colspan="4">@Model.Sum(i => i.LaptopPrice) $</td>
</tr>

</table>

</div>