@using System.Web.Optimization
@model StoreUI.Models.LoginUserViewModel

@{
    Layout = null;
}
@Styles.Render("~/Content/css")

    <div class="splash-container">
@using (Html.BeginForm("SignIn", "Account", FormMethod.Post))
{
        <div class="card ">
            <div class="card-header text-center"><span class="splash-description">Please enter your user information.</span></div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="card-body">
                <form>
                    <div class="form-group">
                        <input class="form-control form-control-lg" id="login" type="text" name="Login" placeholder="Username" autocomplete="off">
                    </div>
                    <div class="form-group">
                        <input class="form-control form-control-lg" id="password" type="password" name="Password" placeholder="Password">
                    </div>

                    <button type="submit" class="btn btn-primary btn-lg btn-block">Sign in</button>
                </form>
            </div>
            <div class="card-footer bg-white p-0  ">
                <div class="card-footer-item card-footer-item-bordered">
                    <a href="@Url.Action("Register", "Account")" class="footer-link">Create An Account</a>
                </div>

            </div>
        </div>
}
    </div>

